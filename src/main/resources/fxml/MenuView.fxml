                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/en-stock.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button contentDisplay="GRAPHIC_ONLY" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onInventarioAction" text="Gestión de Inventario" GridPane.columnIndex="1" GridPane.rowIndex="1">
